{
    "name": "Ufora Dark Mode",
    "version": "0.2.8",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "manifest_version": 2,

    "icons": {  "16": "Icons/icon16.png",
                "48": "Icons/icon48.png",
                "128": "Icons/icon128.png" },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "tabs",
        "storage",
        "https://*.ugent.be/*"
    ],

    "browser_action": {
        "default_popup": "popup.html"
    }
}
